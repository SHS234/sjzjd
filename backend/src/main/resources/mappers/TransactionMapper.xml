<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.tdesign.mapper.TransactionMapper">
    <resultMap id="BaseResultMap" type="com.tencent.tdesign.entity.TransactionEntity">
        <id column="id" property="id" />
        <result column="transaction_no" property="transactionNo" />
        <result column="booster_id" property="boosterId" />
        <result column="type" property="type" />
        <result column="amount" property="amount" />
        <result column="balance_after" property="balanceAfter" />
        <result column="related_id" property="relatedId" />
        <result column="note" property="note" />
        <result column="created_at" property="createdAt" />
    </resultMap>

    <select id="selectPage" resultMap="BaseResultMap">
        SELECT * FROM transactions
        <where>
            <if test="boosterId != null">
                AND booster_id = #{boosterId}
            </if>
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM transactions
        <where>
            <if test="boosterId != null">
                AND booster_id = #{boosterId}
            </if>
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.tencent.tdesign.entity.TransactionEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO transactions (transaction_no, booster_id, type, amount, balance_after, related_id, note, created_at)
        VALUES (#{transactionNo}, #{boosterId}, #{type}, #{amount}, #{balanceAfter}, #{relatedId}, #{note}, #{createdAt})
    </insert>
</mapper>
